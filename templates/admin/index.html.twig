{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
	<style>
		.user {
			display: flex;
			align-items: baseline;
			gap: 12px
		}

		.cards {
			display: flex;
			flex-wrap: wrap;
		}

		.card {
			width: fit-content;
			padding: 8px;
			background-color: #FFF;
			box-shadow: 0 0 6px -1px rgba(0, 0, 0, 0.13), 0 2px 4px -1px rgba(0, 0, 0, 0.09);
		}

		.card__inner {
			display: flex;
			align-items: flex-start;
			justify-content: space-evenly;
			gap: 32px;
		}

		.card__content {
			display: flex;
			flex-direction: column;
			gap: 8px;
		}

		.card h3,
		.card p {
			margin: 0 0 8px
		}

		.board {
			border-collapse: collapse;
		}

		.board__row {
			display: flex;
		}

		.board__cell {
			width: 10px;
			height: 10px;
			display: flex;
			align-items: center;
			justify-content: center;
			border: 1px solid #000;
		}

		.board__cell--yellow {
			background-color: yellow
		}

		.board__cell--red {
			background-color: red
		}
	</style>
	{% if users %}
		<details>
			<summary>
				Liste des utilisateurs :
			</summary>
			<ul class="users">
				{% for user in users %}
					<li class="user">
						<p class="user__id">ID :
							{{ user.id }}</p>
						<p class="user__id">Roles :
							{% for role in user.roles %}
								<span>{{role}}</span>
							{% endfor %}
						</p>
						<p class="user__email">Email :
							{{ user.email }}</p>
						<form action="{{ path('admin_block_user', { 'userId': user.id }) }}" method="post">
							<input type="hidden" name="_token" value="{{ csrf_token('block_user_' ~ user.id) }}">
							<button type="submit" class="btn btn-block">
								{% if user.blocked %}
									D√©bloquer
								{% else %}
									Bloquer
								{% endif %}
							</button>
						</form>
						<a href="{{ path('app_game')}}?_switch_user={{ user.email }}">impersonate</a>
					</li>
				{% endfor %}
			</ul>
		</details>
	{% endif %}

	{%if games %}
		<details>
			<summary>
				Parties enregistr√©es :
			</summary>
			<div class="cards">
				{% for game in games %}
					<div class="card">
						<h3 class="card__title">Partie n¬∞
							{{ game.id }}</h3>
						<div class="card__inner">
							<div class="card__content">
								<p class="card__date">üìÖ
									{{ game.date|date('Y-m-d H:i:s') }}</p>
								<p class="card__player">ID joueur 1 :
									{{ game.player1 }}</p>
								<p class="card__player">ID joueur 2 :
									{{ game.player2 }}</p>
								<p class="card_winner">üèÜ
									{{ game.winner }}</p>
								<p class="card__duration">‚è±Ô∏è
									{{ game.duration }}</p>
							</div>
							<table class="board">
								{% for row in game.board %}
									<tr class="board__row">
										{% for cell in row %}
											{% if cell == 'red' %}
												<td class="board__cell board__cell--red"></td>
											{% elseif cell == 'yellow' %}
												<td class="board__cell board__cell--yellow"></td>
											{% else %}
												<td class="board__cell board__cell--empty"></td>
											{% endif %}
										{% endfor %}
									</tr>
								{% endfor %}
							</table>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p>Aucune partie n'est enregistr√©e pour le moment</p>
		{% endif %}
	</details>
{% endblock %}
